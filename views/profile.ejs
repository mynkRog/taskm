<%- include("partials/header")%>
<%- include("partials/nav")%>
<div class="box2">
    <h1>💼 Manage Your Task here...</h1>
    <ul>
    <% users.forEach((user) =>{ %>
        <li><h2 style="color: white; margin-bottom: 10px; margin-top: 10px;"><%= user.username %></h2>
            <p class="p1">&nbspTitle- <%= user.title %></p>
            <p class="p2">Description- <%= user.description %></p>
            <p class="p3">Due Date- <%= user.due %></p>
        </li>
        <a class="a1" href="/update/<%= user._id%>">✏️</a>  
        <a class="a2" href="/delete/<%= user._id%>">❌</a>
        <a class="a3" href="/newtask">➕</a>
        <a class="a4" style="margin-left: 490px;">⚪</a>
        <a class="a5" style="margin-left: 490px;">🟡</a>
        <p class="com" style="color: white; display: none; width: 15%; margin-left: 260px;">Completed!</p>
    <%})%>
    </ul>
</div>
<%- include("partials/footer")%>